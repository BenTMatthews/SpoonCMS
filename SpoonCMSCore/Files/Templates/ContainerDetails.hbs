<script id="container-details-template" type="text/x-handlebars-template">
    <div id="containerName">
        <i class="fa fa-pencil editContainerName" aria-hidden="true" data-container-id="{{Id}}"></i>
        &nbsp;
        <span class="containerNameBlock">{{Name}}</span>
    </div>
    <div id="containerDetailsAttributes">
        {{#each Items}}
        {{> contentDetails-partial}}
        {{/each}}
    </div>
    <ul id="containerItems">
        <li class="addItem" data-container-id="{{Id}}">
            <div class="itemContentBlock">
                +
            </div>
        </li>
        {{#each Items}}
        {{> contentBlock-partial}}
        {{/each}}
    </ul>

    <button class="saveContainer" data-container-id="{{Id}}">
        Save All & Order
    </button>
</script>


<script id="contentBlock-partial" type="text/x-handlebars-template">
    <li class="itemBlock" data-item-id="{{Id}}">
        <div class="itemContentBlock">
            {{Name}}
        </div>
        <div class="contentPriority">
            1
        </div>
    </li>
</script>

<script id="contentDetails-partial" type="text/x-handlebars-template">
    <div class="contentDetailsBlock" data-item-id="{{Id}}">
        <div class="contentName">
            <i class="fa fa-pencil editContentName" aria-hidden="true" data-item-id="{{Id}}"></i>
            &nbsp;
            <span class="containerItemName">{{Name}}</span>
            <span class="deleteItemBlock"><i class="fa fa-trash-o deleteItem" data-item-id="{{Id}}" aria-hidden="true"></i></span>
        </div>
        <div class="contentTextBlock">
            <textarea id="{{Id}}" class="htmlEditBox" name="editorBox">{{Value}}</textarea>
        </div>
        <div class="contentSaveBlock">
            <i class="fa fa-floppy-o saveItem" aria-hidden="true" data-item-id="{{Id}}" data-container-id="{{@root.Id}}"></i>
        </div>
    </div>
</script>